<form method="post" action="{{ path('livro_delete', {'id': livro.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livro.id) }}">
    <button class="btn">Delete</button>
</form>
