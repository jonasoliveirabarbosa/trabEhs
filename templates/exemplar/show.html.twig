{% extends 'base.html.twig' %}

{% block title %}Exemplar{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header" id="top">
                <h2 class="pageheader-title">Exemplar</h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ exemplar.id }}</td>
                            </tr>
                            <tr>
                                <th>Edicao</th>
                                <td>{{ exemplar.edicao }}</td>
                            </tr>
                            <tr>
                                <th>Ano</th>
                                <td>{{ exemplar.ano }}</td>
                            </tr>
                            <tr>
                                <th>Ativo</th>
                                <td>{{ exemplar.ativo ? 'Yes' : 'No' }}</td>
                            </tr>
                            <tr>
                                <th>Livre</th>
                                <td>{{ exemplar.livre ? 'Yes' : 'No' }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('exemplar_index') }}">voltar a listagem</a>

                    <a href="{{ path('exemplar_edit', {'id': exemplar.id}) }}">editar</a>

                    {{ include('exemplar/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
